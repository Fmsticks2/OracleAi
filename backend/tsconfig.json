{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "./"
  },
  "include": ["src/**/*", "scripts/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}